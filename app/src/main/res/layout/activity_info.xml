<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="Logo"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- NumÃ©ro de contact -->
        <LinearLayout
            android:id="@+id/layoutPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/info_item_bg"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/telephone"
                android:tint="@color/black"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+221 77 123 45 67"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Facebook -->
        <LinearLayout
            android:id="@+id/layoutFacebook"
            style="@style/InfoItem"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/facebook"
                android:tint="@color/black"
                android:layout_marginEnd="12dp" />
            <TextView
                android:text="Page Facebook AgroFood"
                android:textSize="16sp"
                android:layout_height="0dp"
                android:layout_width="0dp" />
        </LinearLayout>

        <!-- TikTok -->
        <LinearLayout
            android:id="@+id/layoutTikTok"
            style="@style/InfoItem"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/tiktok"
                android:tint="@color/black"
                android:layout_marginEnd="12dp" />
            <TextView
                android:text="Compte TikTok"
                android:textSize="16sp"
                android:layout_height="0dp"
                android:layout_width="0dp" />
        </LinearLayout>

        <!-- Instagram -->
        <LinearLayout
            android:id="@+id/layoutInstagram"
            style="@style/InfoItem"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/instagram"
                android:tint="@color/black"
                android:layout_marginEnd="12dp" />
            <TextView
                android:text="Page Instagram"
                android:textSize="16sp"
                android:layout_height="0dp"
                android:layout_width="0dp" />
        </LinearLayout>

        <!-- Site web -->
        <LinearLayout
            android:id="@+id/layoutWebsite"
            style="@style/InfoItem">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/website"
                android:tint="@color/black"
                android:layout_marginEnd="12dp" />
            <TextView
                android:text="Site web officiel"
                android:textSize="16sp"
                android:layout_height="0dp"
                android:layout_width="0dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
